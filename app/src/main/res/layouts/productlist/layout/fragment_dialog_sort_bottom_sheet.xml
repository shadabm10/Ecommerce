<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorSeparator" />

    <TextView
        android:id="@+id/tv_most_viewed"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_x"
        android:paddingTop="@dimen/padding_x"
        android:text="@string/most_viewed" />

    <TextView
        android:id="@+id/tv_most_ordered"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_x"
        android:paddingTop="@dimen/padding_x"
        android:text="@string/most_ordered" />

    <TextView
        android:id="@+id/tv_most_shared"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_x"
        android:paddingTop="@dimen/padding_x"
        android:text="@string/most_shared" />
</LinearLayout>